{
  "name": "e2ee-msg",
  "version": "1.0.0",
  "description": "A local (no-server) end-to-end encryption messaging tool",
  "scripts": {
    "build": "esbuild src/index.tsx --bundle --minify --outfile=dist/bundle.js",
    "build:watch": "esbuild src/index.tsx --bundle --outfile=dist/bundle.js --watch",
    "build:standalone": "npm run build && node tools/create-datauri.js",
    "build:compressed": "npm run build && node tools/create-ultracompact.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "esbuild": "^0.19.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lz-string": "^1.5.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@noble/ed25519": "^2.0.0",
    "@noble/hashes": "^2.0.0",
    "@tabler/icons-react": "^3.0.0",
    "ed2curve": "^0.3.0",
    "qr-scanner": "^1.4.2",
    "qrcode.react": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "scrypt-js": "^3.0.1",
    "session-keystore": "^1.0.3",
    "tweetnacl": "^1.0.3"
  }
}
