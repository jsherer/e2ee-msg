{
  "name": "e2ee-msg",
  "version": "1.0.0",
  "description": "A local (no-server) end-to-end encryption messaging tool",
  "scripts": {
    "build": "esbuild src/index.tsx --bundle --minify --outfile=dist/bundle.js",
    "build:watch": "esbuild src/index.tsx --bundle --outfile=dist/bundle.js --watch",
    "build:standalone": "npm run build && node tools/create-datauri.js",
    "build:compressed": "npm run build && node tools/create-ultracompact.js"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "esbuild": "^0.19.0",
    "lz-string": "^1.5.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@tabler/icons-react": "^3.0.0",
    "qrcode.react": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "session-keystore": "^1.0.3",
    "tweetnacl": "^1.0.3"
  }
}
